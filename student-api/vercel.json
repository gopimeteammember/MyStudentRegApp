// vercel.json (place this file in the root directory of your project)
{
  "version": 2,
  "builds": [
    {
      "src": "student-api/server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/student",
      "destination": "/student-api/server.js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/student-api/server.js"
    }
  ]
}